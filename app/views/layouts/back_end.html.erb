<!DOCTYPE html>
<html>
<head>
  <title>松江气象局微信管理平台</title>
  <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    "admin/#{controller.controller_name}", media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'admin/application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "admin/#{controller.controller_name}", media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="page-header-fixed">
  <!-- 顶部导航 -->
  <%= render partial: "/admin/share/top_bar" %>

  <div class="page-container">
    <!-- 左侧导航栏部分 -->
    <%= render partial: "/admin/share/left_bar" %>

    <!-- 右侧内容页 -->
    <div class="page-content">
      <!-- 右侧中间内容部分 -->
      <div class="container-fluid">
        <%= yield %>
      </div>
      
      <!-- flash -->
      <%= render partial: "/admin/share/flash_info" %>
      
    </div>
  </div>
  
  <!-- 页脚 -->
  <%= render partial: "/admin/share/footer" %>
  <%= yield :scripts %>
</body>
</html>
