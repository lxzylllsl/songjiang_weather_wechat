      var _target = $(this).attr("data-target");
      $(this).toggleClass('gray');
      init_map();
      if ($(this).hasClass('gray')) {
          show_units.splice($.inArray(_target,show_units),1);
      } else {
        show_units.push(_target);
      }
      clearTimeout(timer);
      _typhoon.setPath(null);
      draw_typhoon(200);
