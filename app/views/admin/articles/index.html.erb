<div class="row">
  <h1 class="page-title">专题文章列表</h1>
</div>
<div class="row">
  <div class="content col-sm-12">
    <div class="nest">
      <div class="tool-bar pull-right">
        <a href="/admin/articles/new" class="btn btn-primary" data-turbolinks="false">
          <i class="glyphicon glyphicon-plus"></i>创建
        </a>
      </div>
      <div class="body-nest">
        <table class="table table-bordered table-hover table-striped">
          <thead>
            <tr>
              <th>图片</th>
              <th>标题</th>
              <th>作者</th>
              <th>创建时间</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @articles.each do |item| -%>
            <tr>
              <td class="thumb"><%= image_tag item.picture.url(:small) -%></td>
              <td><%= item.title -%></td>
              <td><%= item.author -%></td>
              <td><%= item.created_at.strftime('%F %H:%M') -%></td>
              <td>
                <a href="<%= edit_admin_article_path(item) %>" data-turbolinks="false">
                  <i class="iconfont icon-bianji"></i>
                </a>
                <%= link_to admin_article_path(item), method: "delete",  data: { confirm: '确定删除?'} do %>
                  <i class="iconfont icon-shanchu"></i>
                <% end %>
              </td>
            </tr>
            <% end -%>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="5">
                <div class="pagination pagination-centered pull-right">
                  <div class='row'><%= will_paginate @articles, :renderer => BootstrapPagination::Rails ,:remote => {:update => 'messages'} %></div>
                </div>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>
